<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacherActivity">

    <TextView
        android:id="@+id/hello_user_info"
        android:layout_width="314dp"
        android:layout_height="56dp"
        android:elevation="4dp"
        android:textAlignment="textEnd"
        android:textSize="20sp" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.QLSV_android.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.QLSV_android.PopupOverlay" />

        <include
            layout="@layout/content_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                app:columnCount="2">

                <ImageButton
                    android:id="@+id/btn_GV_MonHoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounder_layout"
                    app:srcCompat="@drawable/_50px_logo_dhktdn" />

                <ImageButton
                    android:id="@+id/btn_GV_LichHoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounder_layout"
                    app:srcCompat="@drawable/_50px_logo_dhktdn" />

                <ImageButton
                    android:id="@+id/btn_GV_SinhVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounder_layout"
                    app:srcCompat="@drawable/_50px_logo_dhktdn" />
            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>